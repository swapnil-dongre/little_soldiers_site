

    

    <!-- Header Carousel -->
    <header id="myCarousel" class="carousel slide" style="margin-top:20px">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <div class="fill" style="background-image:url('assets/im7.JPG');"></div>
                <div class="carousel-caption">
                    
                </div>
            </div>
            <div class="item">
                <div class="fill" style="background-image:url('assets/im6.JPG');"></div>
                <div class="carousel-caption">
                    
                </div>
            </div>
            <div class="item">
                <div class="fill" style="background-image:url('assets/IMG_0080.JPG');"></div>
                <div class="carousel-caption">
                    
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="icon-next"></span>
        </a>
    </header>

    <!-- Page Content -->
    <div class="container">

        <!-- Marketing Icons Section -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    
                </h1>
            </div>
            <div class="col-md-4" >
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <h4><b>NOTICES</b></h4>
                    </div>
                    <div class="panel-body" style="margin-left:10px; max-height: 250px; min-height: 250px; overflow: auto;">
                        <% @notices.each do |notice| %>
                        <ul>
                            <li class="reason"><%= notice.title %><p class="reasonText"><%= notice.body %></p></li></br>
                        </ul>
                        <% end %>
                        
                    </div>
                </div>
            </div>
                <div class="col-md-4">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h4><b>UPCOMING EVENTS</b></h4>
                    </div>
                    <div class="panel-body" style="margin-left:10px; max-height: 250px; min-height: 250px; overflow: auto;">
                        <% @events.each do |event| %>
                        <ul>
                            <li class="reason"><%= event.ename %><p class="reasonText"><%= event.edesc %></p></li></br>
                        </ul>
                        <% end %>
                        
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h4><b>REGULAR EVENTS</b></h4>
                    </div>
                    <div class="panel-body" style="margin-left:10px; max-height: 250px; min-height: 250px; overflow: auto;">
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Itaque, optio corporis quae nulla aspernatur in alias at numquam rerum ea excepturi expedita tenetur assumenda voluptatibus eveniet incidunt dicta nostrum quod?</p>
                        
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->

        

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Script to Activate the Carousel -->
    <script>
    $('#myCarousel').carousel({
        interval: 5000 //changes the speed
    })
    </script>

    <script>
$('.reasonText').hide(); //hide all the reason text
$('.reason').on('click', function() {
  $(this).children('.reasonText').slideToggle('slow');
})
</script>


